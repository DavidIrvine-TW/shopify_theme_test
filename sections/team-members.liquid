<h1>{{ section.settings.heading }}</h1>

<div class="custom--container">
  {% for block in section.blocks %}
    <div class="custom--container__slide">
      <h2 class="custom--container__title">{{ block.settings.title }}</h2>

      <div class="custom--container__image">
        <img
          width="100px" height="100px"
           src="{{ block.settings.image | image_url: 'master'}}"
        >
      </div>
      <p>TEXT ABOUT PHOTO</p>
    </div>
  {% endfor %}
</div>

<style>
  .customContainer {

  }
</style>

{% schema %}
  {
    "name": "team-members",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label" : "Heading",
        "default" : "My Custom Heading"
      }
    ],
    "blocks" : [
      {
        "type" : "column",
        "name" : "slide",
        "settings" : [
          {
            "type" : "text",
            "id" : "title",
            "label" : "Title",
            "default" : "Title"
          },
          {
            "type": "image_picker",
            "id" : "image",
            "label" :  "Image"
          },
          {
            "type" : "text",
            "id" : "description",
            "label" : "Description",
            "default" : "Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Slick Slider"
      }
    ]
  }
{% endschema %}

