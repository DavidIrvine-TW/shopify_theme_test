<h1>{{ section.settings.heading }}</h1>

<div class="custom--container">
  {% for block in section.blocks %}
    <div class="custom--container__slide">
      <h2 class="custom--container__title">{{ block.settings.title }}</h2>

      <div class="cusomt--container__image">
        <img
          width=""
          height=""
          src="{{ block.settings.image |img_url }}"
        >
      </div>
      <p>TEXT ABOUT PHOTO</p>
    </div>
  {% endfor %}
</div>

<style>
  .customContainer {

  }
</style>

{% schema %}
{
    "name": "Team ONE",
    "tag": "section",
    "limit": 1,
    "settings": [
         {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Select Image"
                }
    ],
    "max_blocks": 5,
    "blocks": [
        {
            "type": "lv426",
            "name": "slide",
            "settings": [

                {
                    "type": "textarea",
                    "id": "home_welcome_message",
                    "label": "Welcome message",
                    "default": "Welcome to my shop!"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "teamOne"
        }
    ]
}
{% endschema %}

